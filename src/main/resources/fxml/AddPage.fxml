<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          hgap="20" vgap="10">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label text="Voornaam" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField prefWidth="200" fx:id="voornaamInput" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

    <Label text="Familienaam" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField prefWidth="200" fx:id="familienaamInput" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

    <Button text="Toevoegen" fx:id="createButton" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Button text="Annuleren" fx:id="cancelButton" GridPane.rowIndex="2" GridPane.columnIndex="1" />

</GridPane>